<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CoursWPF1"
                    xmlns:views="clr-namespace:CoursWPF1.Views"
                    xmlns:viewModels="clr-namespace:CoursWPF1.ViewModels">

  <DataTemplate DataType="{x:Type viewModels:ViewModelPeople}" x:Key="ViewModelPeopleTemplate">
    <views:DataGridPeople/>
  </DataTemplate>

  <DataTemplate DataType="{x:Type viewModels:ViewModelPersonType}" x:Key="ViewModelPersonTypeTemplate">
    <views:DataGridPersonTypes/>
  </DataTemplate>

  <DataTemplate DataType="{x:Type viewModels:ViewModelHome}" x:Key="ViewModelHomeTemplate">
    <views:Home/>
  </DataTemplate>

</ResourceDictionary>