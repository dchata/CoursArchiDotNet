<UserControl x:Class="CoursWPF1.Views.DataGridPeople"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:MVVMLib.Controls;assembly=MVVMLib"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <DataGrid ItemsSource="{Binding ItemsSource}" SelectedItem="{Binding SelectedItem}" controls:SelectedItemsHelper.SelectedItems="{Binding SelectedItems}"
              AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True" IsReadOnly="False" 
              Style="{StaticResource AzureDataGrid}" Margin="10,20,10,0">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}"/>
        <DataGridTextColumn Header="Nom"    Binding="{Binding LastName}"/>
        <DataGridTemplateColumn Header="Type">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding Type.Name}"/>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
          <DataGridTemplateColumn.CellEditingTemplate>
            <DataTemplate>
              <ComboBox SelectedItem="{Binding Type}" ItemsSource="{Binding DataContext.VMPersonType.ItemsSource, RelativeSource={RelativeSource AncestorType=DataGrid, Mode=FindAncestor}}" DisplayMemberPath="Name"/>
            </DataTemplate>
          </DataGridTemplateColumn.CellEditingTemplate>
        </DataGridTemplateColumn>
        <DataGridTemplateColumn Header="Supprimer">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <Button Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGrid}}" CommandParameter="{Binding}">
                <fa:ImageAwesome Icon="Trash" Height="12"/>
              </Button>
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
